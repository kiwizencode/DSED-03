<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hangman_blank"
    android:minWidth="25px"
    android:minHeight="25px"
    android:paddingRight="25dp"
    android:paddingLeft="25dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/TitleLayout"
        android:background="@drawable/title_bar"
        android:minWidth="25px"
        android:minHeight="25px">
        <TextView
            android:text="Hangman Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:paddingTop="5dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:text="Start a New Game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartGame" />
    <Button
        android:text="highest scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnScores" />
<!-- -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <Button
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnProfile" />
    <Button
        android:text="Credits"
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<!--
      Aligning TextView center horizontaly and bottom to the parent
      https://stackoverflow.com/questions/14221066/aligning-textview-center-horizontaly-and-bottom-to-the-parent
      -->
    <TextView
        android:text="Text"
        android:id="@+id/textViewMessage"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>