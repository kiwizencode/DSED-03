<?xml version="1.0" encoding="utf-8" ?> 
<!-- How to add border on Android TextView
  http://www.worldbestlearningcenter.com/tips/How-to-add-border-on-Android-TextView.htm -->
<shape xmlns:android=" http://schemas.android.com/apk/ res/android"  
       android:thickness="0dp" android:shape="rectangle">

  <stroke android:width="1dp" android:color="#44aa77"/>

  <corners android:radius="5dp"/>

  <padding android:left="5dp"  android:top="1dp"
           android:right="5dp" android:bottom="1dp"/>

</shape>