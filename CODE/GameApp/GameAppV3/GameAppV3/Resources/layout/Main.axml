<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hangman_blank">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_start"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/ImageWordSlot01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_question"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/ImageWordSlot02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_question"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/ImageWordSlot03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_question"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/ImageWordSlot04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_question"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:id="@+id/ImageWordSlot05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_question"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/word_end"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
    </LinearLayout>
    <Button
        android:id="@+id/btnPressMe"
        android:text="Press Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:gravity="center" />
</LinearLayout>